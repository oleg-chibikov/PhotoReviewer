<UserControl
    x:Class="PhotoReviewer.View.Controls.MainControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:PhotoReviewer.ViewModel;assembly=PhotoReviewer.ViewModel"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:converters="clr-namespace:Scar.Common.WPF.Converters;assembly=Scar.Common.WPF.Converters"
    xmlns:core="clr-namespace:Scar.Common.WPF.View.Core;assembly=Scar.Common.WPF.View.Core"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary>
                    <converters:NullToBooleanConverter
                        x:Key="NullToBooleanConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel
        core:MarginSetter.Margin="10">
        <!-- Progress Bar -->
        <DockPanel
            Opacity="0">
            <DockPanel.Style>
                <Style
                    TargetType="DockPanel">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding ProgressState, Mode=OneWay}"
                            Value="Normal">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        Storyboard.TargetProperty="Opacity">
                                        <DoubleAnimation
                                            From="0"
                                            To="1"
                                            Duration="0:0:0:1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        Storyboard.TargetProperty="Opacity">
                                        <DoubleAnimation
                                            Duration="0:0:0:1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>
            <ProgressBar
                Minimum="0"
                Maximum="100"
                Height="20"
                Value="{Binding Progress, Mode=OneWay}"
                ToolTip="{Binding ProgressDescription, Mode=OneWay}" />
        </DockPanel>

        <!-- Zoom Control -->
        <DockPanel>
            <TextBlock>Zoom:</TextBlock>
            <Slider
                Cursor="Hand"
                Margin="10,0,0,0"
                Orientation="Horizontal"
                Minimum="80"
                Maximum="750"
                Value="{Binding PhotoSize, Mode=TwoWay}"
                TickFrequency="80"
                TickPlacement="BottomRight"
                SmallChange="5"
                LargeChange="20" />
        </DockPanel>

        <DockPanel>
            <!-- Visibility CheckBox -->
            <CheckBox
                VerticalAlignment="Center"
                Command="{Binding ShowOnlyMarkedChangedCommand, Mode=OneTime}"
                CommandParameter="{Binding IsChecked, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                Content="Only marked" />

            <!-- Image Buttons -->
            <UniformGrid
                Rows="1"
                HorizontalAlignment="Right"
                core:MarginSetter.Margin="5"
                core:MarginSetter.Orientation="Horizontal">
                <UniformGrid.Resources>
                    <Style
                        TargetType="Button"
                        BasedOn="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                        <Setter
                            Property="Width"
                            Value="25" />
                        <Setter
                            Property="Height"
                            Value="25" />
                    </Style>
                </UniformGrid.Resources>

                <Button
                    Command="{Binding ViewLogsCommand, Mode=OneTime}"
                    ToolTip="Show Logs">
                    <materialDesign:PackIcon
                        Kind="FileDocument" />
                </Button>

                <Button
                    Command="{Binding OpenSettingsFolderCommand, Mode=OneTime}"
                    ToolTip="Open settings directory">
                    <materialDesign:PackIcon
                        Kind="Folder" />
                </Button>
            </UniformGrid>
        </DockPanel>

        <!-- Copy Favorited Button -->
        <Button
            Command="{Binding CopyFavoritedCommand, Mode=OneTime}">
            <Button.Content>
                <TextBlock
                    Text="{Binding PhotoCollection.FavoritedCount, Mode=OneWay, StringFormat='Copy favorited ({0})'}" />
            </Button.Content>
            <Button.Style>
                <Style
                    BasedOn="{StaticResource {x:Type Button}}"
                    TargetType="Button">
                    <Setter
                        Property="IsEnabled"
                        Value="True" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding ProgressState, Mode=OneWay}"
                            Value="Normal">
                            <Setter
                                Property="IsEnabled"
                                Value="False" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding PhotoCollection.FavoritedCount, Mode=OneWay}"
                            Value="0">
                            <Setter
                                Property="IsEnabled"
                                Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Delete Button -->
        <Button
            Command="{Binding DeleteMarkedCommand, Mode=OneTime}">
            <Button.Content>
                <TextBlock
                    Text="{Binding PhotoCollection.MarkedForDeletionCount, Mode=OneWay, StringFormat='Delete marked ({0})'}" />
            </Button.Content>
            <Button.Style>
                <Style
                    BasedOn="{StaticResource {x:Type Button}}"
                    TargetType="Button">
                    <Setter
                        Property="IsEnabled"
                        Value="True" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding ProgressState, Mode=OneWay}"
                            Value="Normal">
                            <Setter
                                Property="IsEnabled"
                                Value="False" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding PhotoCollection.MarkedForDeletionCount, Mode=OneWay}"
                            Value="0">
                            <Setter
                                Property="IsEnabled"
                                Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Open in Explorer Button -->
        <Button
            Content="Open folder in Explorer"
            Command="{Binding OpenDirectoryInExplorerCommand, Mode=OneTime}"
            IsEnabled="{Binding CurrentDirectoryPath, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}" />

    </StackPanel>
</UserControl>
